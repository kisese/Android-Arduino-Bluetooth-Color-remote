<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            >
            <solid
                android:color="#A9A9A9"/>
            <stroke
                android:width="1dp"
                android:color="#EEE8AA"
                />
            <corners
                android:radius="6dp"/>

        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            >
            <gradient
                android:startColor="#808080"
                android:centerColor="#C0C0C0"
                android:endColor="#A9A9A9"
                android:angle="270"
                />
            <stroke
                android:width="2dp"
                android:color="#C0C0C0"
                />
            <corners
                android:radius="16dp"
                />

        </shape>
    </item>
</selector>